@model Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<div class="container mt-5">
    <div asp-validation-summary="All"></div>
    <div class="card shadow-lg p-4 rounded-4">
        <h2 class="text-center mb-4 text-info">Delete Movie</h2>

        <form asp-action="Delet" method="post" asp-route-id="@Model.Id">
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold"></label>
                <input asp-for="Name" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-bold"></label>
                <textarea asp-for="Description" class="form-control" readonly></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label fw-bold"></label>
                <input asp-for="Price" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label fw-bold"></label>
                <input asp-for="ImageUrl" class="form-control" readonly />
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="StartDate" class="form-label fw-bold"></label>
                    <input asp-for="StartDate" type="date" class="form-control" readonly />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="EndDate" class="form-label fw-bold"></label>
                    <input asp-for="EndDate" type="date" class="form-control" readonly />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="MovieCategory" class="form-label fw-bold"></label>
                <select asp-for="MovieCategory" class="form-select" asp-items="Html.GetEnumSelectList<Ecommerce_App.Data.Enums.MovieCategory>()" disabled></select>
            </div>

            <div class="mb-3">
                <label asp-for="CinemaId" class="form-label fw-bold"></label>
                <select asp-for="CinemaId" class="form-select" asp-items="ViewBag.Cinemas" disabled></select>
                <input type="hidden" asp-for="CinemaId" />
            </div>

            <div class="mb-3">
                <label asp-for="ProducerId" class="form-label fw-bold"></label>
                <select asp-for="ProducerId" class="form-select" asp-items="ViewBag.Producers" disabled></select>
                <input type="hidden" asp-for="ProducerId" />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-info px-4">Confirm Delete</button>
                <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>
