@model Movie

@{
    ViewData["Title"] = "Add New Movie";
}

<div class="container mt-5">
    <div asp-validation-summary="All"></div>
    <div class="card shadow-lg p-4 rounded-4">
        <h2 class="text-center mb-4 text-info">Update Movie</h2>

        <form asp-action="Edit" method="post" asp-route-id="@Model.Id">
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-bold"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label fw-bold"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label fw-bold"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="StartDate" class="form-label fw-bold"></label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="EndDate" class="form-label fw-bold"></label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="MovieCategory" class="form-label fw-bold"></label>
                <select asp-for="MovieCategory" class="form-select" asp-items="Html.GetEnumSelectList<Ecommerce_App.Data.Enums.MovieCategory>()"></select>
                <span asp-validation-for="MovieCategory" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CinemaId" class="form-label fw-bold"></label>
                <select asp-for="CinemaId" class="form-select" asp-items="ViewBag.Cinemas" ></select>
                <span asp-validation-for="CinemaId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProducerId" class="form-label fw-bold"></label>
                <select asp-for="ProducerId" class="form-select" asp-items="ViewBag.Producers"></select>
                <span asp-validation-for="ProducerId" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-info px-4">Update</button>
                <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
