<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecommerce_App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* @RenderSection("Styles") *@
    <link rel="stylesheet" href="~/Ecommerce_App.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    🎬 Bebo
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarNav" aria-controls="navbarNav"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Movies" asp-action="Index">
                                <i class="bi bi-film"></i> Movies
                            </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-gear"></i> Management
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-controller="Cinema" asp-action="Index"><i class="bi bi-camera-reels"></i> Cinemas</a></li>
                                <li><a class="dropdown-item" asp-controller="Producer" asp-action="Index"><i class="bi bi-headset"></i> Producers</a></li>
                                <li><a class="dropdown-item" asp-controller="Actors" asp-action="Index"><i class="bi bi-person-square"></i> Actors</a></li>
                            </ul>
                        </li>}
                    </ul>
                    <div>
                        <a asp-controller="Orders" asp-action="Cart" class="nav-link position-relative">
                            <i class="bi bi-cart" style="font-size: 1.8rem;"></i>
                            
                        </a>

                    </div>
                    <form class="d-flex" asp-controller="Movies" asp-action="Filter">
                        <div class="input-group">
                            <input name="searchString" type="text" class="form-control"
                            placeholder="Search for a movie..." />
                            <button class="btn btn-outline-success" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>
                 

                </div>
             
                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="m-2">
                    <a asp-action="Register" asp-controller="Account" class="btn btn-outline-info ">Register</a>
                    <a asp-action="Login" asp-controller="Account" class="btn btn-outline-info ">Login</a>
                    </div>
                }
                else {
                    <div class="m-2">
                    

                    <a asp-action="Logout" asp-controller="Account" class="btn btn-outline-info">Logout</a>
                    </div>
                }
            </div>
        </nav>
    </header>

    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="bg-dark text-light text-center py-3 mt-auto"> *@
    @*     <div class="container"> *@
    @*         &copy; 2025 - Ecommerce_App | *@
    @*         <a class="text-decoration-none text-warning" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
    @*     </div> *@
    @* </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
