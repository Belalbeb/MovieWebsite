@model List<Cinema>

@{
    ViewData["Title"] = "List Of Cinemas";
}

<div class="container mt-5">
    <h2 class="text-center text-success mb-4">Cinemas</h2>

    <div class="row">
        <div class="col-md-10 offset-md-1">
            <table class="table table-bordered table-hover text-center align-middle shadow-sm">
                <thead class="table-success">
                    <tr>
                        <th>Logo</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th style="width: 250px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="/@item.Logo"
                                     class="rounded-circle shadow-sm border border-2 border-success"
                                     style="height:80px; width:80px; object-fit:cover;"
                                     alt="@item.Name" />
                            </td>
                            <td><strong>@item.Name</strong></td>
                            <td class="text-muted">@item.Description</td>
                            <td>
                                <a class="btn btn-sm btn-outline-primary me-1"
                                   asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a class="btn btn-sm btn-outline-info me-1"
                                   asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a class="btn btn-sm btn-danger text-white"
                                   asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div style="position:fixed; right:20px; bottom:25px;">
    <a asp-action="Create" class="btn btn-success shadow-lg">
        <i class="bi bi-plus-circle"></i> Add New Cinema
    </a>
</div>
