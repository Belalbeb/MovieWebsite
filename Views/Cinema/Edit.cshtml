@model Cinema
@{
    ViewData["Title"] = "Edit Cinema";
}

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="card shadow-lg p-4 rounded-4" style="width: 600px;">
        <h2 class="text-center text-info mb-4">Edit Cinema</h2>
        <form asp-action="Edit" asp-route-id="@Model.Id">
            <div class="mb-3">
                <label asp-for="Logo" class="form-label fw-bold"></label>
                <input asp-for="Logo" class="form-control" placeholder="Enter Logo URL" />
                <span asp-validation-for="Logo" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter Cinema Name" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-bold"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Enter Description"></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                <button type="submit" class="btn btn-info px-4">Update</button>
            </div>
        </form>
    </div>
</div>

