@model Actor

@{
    ViewData["Title"] = "Details of the Actor";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h2 class="mb-0">Details for @Model.FullName</h2>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <img src="/@Model.ProfilePictureUrl"
                             class="border border-3 border-info rounded-circle shadow"
                             style="width: 150px; height: 150px; object-fit: cover;"
                             alt="@Model.FullName" />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ProfilePictureUrl" class="form-label fw-bold"></label>
                        <input asp-for="ProfilePictureUrl" class="form-control" readonly />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="FullName" class="form-label fw-bold"></label>
                        <input asp-for="FullName" class="form-control" readonly />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Bio" class="form-label fw-bold"></label>
                        <textarea asp-for="Bio" class="form-control" rows="3" readonly></textarea>
                    </div>
                    <div class="d-flex justify-content-between mt-4">
                        <a class="btn btn-outline-secondary px-4" asp-action="Index">Show All</a>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <a class="btn btn-success px-4" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

