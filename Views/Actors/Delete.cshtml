@model Actor
@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded-4">
                <div class="card-header  text-black text-center rounded-top-4">
                    <h2 class="mb-0">Delete Confirmation</h2>
                </div>
                <div class="card-body p-4">
                 
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="ProfilePictureUrl" class="form-label fw-bold"></label>
                            <input asp-for="ProfilePictureUrl" class="form-control" placeholder="Enter profile picture URL..." readonly />
                            <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="FullName" class="form-label fw-bold"></label>
                            <input asp-for="FullName" class="form-control" placeholder="Enter actor full name..." readonly/>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Bio" class="form-label fw-bold"></label>
                            <textarea asp-for="Bio" class="form-control" rows="3" placeholder="Write a short biography..." readonly></textarea>
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                      <form asp-action="Delete" asp-route-id="@Model.Id">
                          <input type="submit" value="Confirm" class="btn btn-danger float-end"/>
                      </form>
                            <a class="btn btn-outline-secondary px-4" asp-action="Index">Show All</a>
                            
                        </div>
                   
                </div>
            </div>
        </div>
    </div>
</div>
