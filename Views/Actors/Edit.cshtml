@model Actor
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded-4">
                <div class="card-header  text-black text-center rounded-top-4">
                    <h2 class="mb-0">Update the Actor</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" asp-route-id="@Model.Id">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="ProfilePictureUrl" class="form-label fw-bold"></label>
                            <input asp-for="ProfilePictureUrl" class="form-control" placeholder="Enter profile picture URL..." />
                            <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="FullName" class="form-label fw-bold"></label>
                            <input asp-for="FullName" class="form-control" placeholder="Enter actor full name..." />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Bio" class="form-label fw-bold"></label>
                            <textarea asp-for="Bio" class="form-control" rows="3" placeholder="Write a short biography..."></textarea>
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a class="btn btn-outline-secondary px-4" asp-action="Index">Show All</a>
                            <input type="submit" value="Update" class="btn btn-success px-4" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
